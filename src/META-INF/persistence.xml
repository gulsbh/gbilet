<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="GBilet">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>com.gbilet.entity.Announcement</class>
		<class>com.gbilet.entity.Event</class>
		<class>com.gbilet.entity.EventType</class>
		<class>com.gbilet.entity.Ticket</class>
		<class>com.gbilet.entity.User</class>
		<class>com.gbilet.entity.Comment</class>
		<class>com.gbilet.entity.Favourite</class>
		<class>com.gbilet.entity.Rate</class>
		<properties>
			<property name="javax.persistence.jdbc.url"
				value="jdbc:mysql://localhost:3306/gbilet" />
			<property name="javax.persistence.jdbc.password" value="gbilet123" />
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver" />
			<property name="javax.persistence.jdbc.user" value="root" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect" />
		    <property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
		    <property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/gbilet" />
		    <property name="hibernate.connection.username" value="root" />
		    <property name="hibernate.connection.password" value="gbilet123" />
		</properties>
	</persistence-unit>
</persistence>
